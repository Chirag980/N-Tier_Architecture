@model List<Category>//By using @model we are connecting or fetching the data from the controller and in the controller we are having index method over there we are getting the data from table.
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				CATEGORY LIST
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i>  CREATE NEW CATEGORY
			</a>
		</div>
	</div>
	@* <h1>category list</h1> *@
	<table class="table table-bordered  table-striped">
		<thead>
			<tr>
				<th>
					CATEGORY NAME
				</th>
				<th>
					DISPLAY ORDER
				</th>
				<th>

				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.OrderBy(x => x.DisplayOrder))//We can simple run the C# code in the cshtml file also we have Model in the foreach loop from there we are connecting to the top @model
			{
				<tr>
					<td>@obj.Name</td> @* Now by using dot notation we can get the particular data *@
					<td>@obj.DisplayOrder</td>
					<td>
						<a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary">
							<i class="bi bi-pencil-square"></i>
						</a>
					</td>
					<td>
						<a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger">
							<i class="bi bi-trash3-fill"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>